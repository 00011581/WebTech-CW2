extends layout.pug

block content
    p Fill the form to update the task

    if (id)
        form(action=`/update/${id}`, method="POST")
            input(type="text" name="title")
            input(type="text" name="comment" cols="30" rows="10")
            input(type="time" name="time")
            input(type="checkbox", name="done")
            
            button.btn Update Task
    else 
        p No tasks with matching id