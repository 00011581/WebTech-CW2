extends layout.pug

block content
    p Fill the form to create a new task

    form(action="/create", method="POST")
        input(type="text" name="title")
        input(type="text" name="comment" cols="30" rows="10")
        input(type="time" name="time")
        button.btn Create Task

        if empty_title_error 
            p.titleError #{ empty_title_error }
